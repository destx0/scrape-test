{
  "manifest_version": 3,
  "name": "Testbook Automation",
  "version": "1.0",
  "description": "Automates clicking the Next button on Testbook.com",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://testbook.com/*"
  ]
}